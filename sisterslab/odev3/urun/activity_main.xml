<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51CD0909"
    tools:context=".MainActivity">

    <?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Ürün Resmi -->
        <ImageView
            android:id="@+id/imageViewProduct"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img" />
        <!-- Dikey bir LinearLayout içinde diğer ürün bilgilerini tutacak konteyner -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Ürün Adı -->
            <TextView
                android:id="@+id/textViewProductName"
                android:layout_width="138dp"
                android:layout_height="48dp"
                android:text="Apple MacBook Air M1"
                android:textSize="18sp"
                android:textStyle="bold" />
            <!-- Ürün Açıklaması -->
            <TextView
                android:id="@+id/textViewProductDescription"
                android:layout_width="138dp"
                android:layout_height="56dp"
                android:text="Çip 8GB 256GB SSD macOS 13&quot; QHD Taşınabilir Bilgisayar"
                android:textSize="14sp" />

            <!-- Ürün Fiyatı -->
            <TextView
                android:id="@+id/textViewProductPrice"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:text="Ürün Fiyatı: 26.998,99 TL"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- "Şimdi Satın Al" Butonu -->
        <Button
            android:id="@+id/buttonBuyNow"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Şimdi Satın Al" />
    </LinearLayout>

    <LinearLayout

        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">>

        <ImageView
            android:id="@+id/imageViewProductt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_1" />

        <LinearLayout
            android:layout_width="135dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Ürün Adı -->

            <!-- Ürün Açıklaması -->
            <TextView
                android:id="@+id/textViewProductNamee"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:text="Huawei MateBook D15"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textViewProductDescriptionn"
                android:layout_width="138dp"
                android:layout_height="45dp"
                android:text="Intel Core i7 1195G7 16GB 512GB SSD"
                android:textSize="17sp" />

            <!-- Ürün Fiyatı -->

            <TextView
                android:id="@+id/textViewProductPricee"
                android:layout_width="138dp"
                android:layout_height="55dp"
                android:text="Ürün Fiyatı: 18.999,00 TL"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonBuyNow2"
            android:layout_width="123dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Şimdi Satın Al" />
    </LinearLayout>

    <!-- Ürün Resmi -->
    <!-- Dikey bir LinearLayout içinde diğer ürün bilgilerini tutacak konteyner -->
</androidx.constraintlayout.widget.ConstraintLayout>